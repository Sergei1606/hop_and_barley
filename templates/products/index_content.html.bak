{% load static %}
<!-- ростые карточки товаров -->
<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 30px; margin-top: 40px;">
    <!-- Товар 1 -->
    <div class="product-card" style="border: 1px solid #eee; border-radius: 8px; padding: 20px; text-align: center;">
        <img src="{% static 'img/products/citra_hops.jpg' %}" alt="Citra Hops" style="width: 100%; height: 200px; object-fit: cover; border-radius: 4px;">
        <h3 style="margin: 15px 0 10px;">Хмель Citra</h3>
        <p style="color: #666; margin-bottom: 15px;">роматный хмель с цитрусовыми нотами</p>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <span style="font-size: 1.2em; font-weight: bold; color: #2c3e50;">890 </span>
            <button class="btn-add-cart" style="background: #4CAF50; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer;">
                 корзину
            </button>
        </div>
    </div>
    
    <!-- Товар 2 -->
    <div class="product-card" style="border: 1px solid #eee; border-radius: 8px; padding: 20px; text-align: center;">
        <img src="{% static 'img/products/mosaic_hops.jpg' %}" alt="Mosaic Hops" style="width: 100%; height: 200px; object-fit: cover; border-radius: 4px;">
        <h3 style="margin: 15px 0 10px;">Хмель Mosaic</h3>
        <p style="color: #666; margin-bottom: 15px;">кзотические фруктовые ароматы</p>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <span style="font-size: 1.2em; font-weight: bold; color: #2c3e50;">950 </span>
            <button class="btn-add-cart" style="background: #4CAF50; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer;">
                 корзину
            </button>
        </div>
    </div>
</div>

<!-- Тестовые кнопки -->
<div style="margin-top: 50px; padding: 30px; background: #f9f9f9; border-radius: 8px; text-align: center;">
    <h3 style="margin-bottom: 20px;">🎯 Тест JavaScript</h3>
    <button id="testBtn" style="padding: 12px 24px; background: #3498db; color: white; border: none; border-radius: 4px; cursor: pointer;">
        ажми меня
    </button>
</div>
